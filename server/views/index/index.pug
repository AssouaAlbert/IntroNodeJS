    .container
        .row.upcoming-travels
                each travel in travels
                    .col-md-4.col-md-4.md-4
                        .card.m-3
                            img.card-img-top.img-fluid(src=`/img/destiny_${travel.image}.jpg` alt=`${travel.title}`)
