                                h2 #{travel.title}
                                h6 Departure Date:
                                p #{travel.departure_date}
                                h6 Return Date:
                                p #{travel.return_date}
                                h6 Price
                                p #{travel.price}
                                h6 Description
                                p #{travel.description.substring(0,100).concat(' ...')}
                                a(href=`travel/${travel.id}`).btn.btn-success.btn-block More ...

